<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#f0f0f0">
    <Button
        android:layout_gravity="end"
        android:id="@+id/button1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="âŒ"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Edit Profile"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="48sp"
        android:layout_gravity="center"
        android:textStyle="bold" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="16dp"
                android:contentDescription="Profile"
                android:clickable="true"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar3"
                android:focusable="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bio"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:fontFamily="cursive"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="32sp"
                android:layout_gravity="center"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/rounded_rectangle_edittext"
                android:ems="10"
                android:hint="Bio"
                android:text=":):"
                android:inputType="textPersonName"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:textAlignment="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hometown"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:fontFamily="cursive"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="32sp"
                android:layout_gravity="center"
                android:textStyle="bold"/>



            <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/rounded_rectangle_edittext"
                android:ems="10"
                android:hint="Hometown"
                android:text="Calasiao"
                android:inputType="textPostalAddress"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:textAlignment="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:fontFamily="cursive"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="32sp"
                android:layout_gravity="center"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/rounded_rectangle_edittext"
                android:ems="10"
                android:entries="@array/status"
                android:inputType="textPersonName"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hobbies"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:fontFamily="cursive"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="32sp"
                android:layout_gravity="center"
                android:textStyle="bold"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:weightSum="2">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reading"
                        android:checked="true"
                        android:padding="11dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:button="@null"
                        android:drawableStart="?android:attr/listChoiceIndicatorMultiple"
                        android:background="@drawable/rounded_rectangle_edittext"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Singing"
                    android:checked="true"
                    android:padding="11dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:button="@null"
                    android:drawableStart="?android:attr/listChoiceIndicatorMultiple"
                    android:background="@drawable/rounded_rectangle_edittext"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:weightSum="2">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dancing"
                    android:checked="true"
                    android:padding="11dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:button="@null"
                    android:drawableStart="?android:attr/listChoiceIndicatorMultiple"
                    android:background="@drawable/rounded_rectangle_edittext"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Watching Movies"
                    android:checked="true"
                    android:padding="11dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:button="@null"
                    android:drawableStart="?android:attr/listChoiceIndicatorMultiple"
                    android:background="@drawable/rounded_rectangle_edittext"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:weightSum="2">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eating"
                    android:checked="true"
                    android:padding="11dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:button="@null"
                    android:drawableStart="?android:attr/listChoiceIndicatorMultiple"
                    android:background="@drawable/rounded_rectangle_edittext"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Traveling"
                    android:checked="true"
                    android:padding="11dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:button="@null"
                    android:drawableStart="?android:attr/listChoiceIndicatorMultiple"
                    android:background="@drawable/rounded_rectangle_edittext"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:weightSum="2">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleeping"
                    android:padding="11dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:button="@null"
                    android:drawableStart="?android:attr/listChoiceIndicatorMultiple"
                    android:background="@drawable/rounded_rectangle_edittext"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coding"
                    android:padding="11dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:button="@null"
                    android:drawableStart="?android:attr/listChoiceIndicatorMultiple"
                    android:background="@drawable/rounded_rectangle_edittext"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:weightSum="2">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Studying"
                    android:padding="11dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:button="@null"
                    android:drawableStart="?android:attr/listChoiceIndicatorMultiple"
                    android:background="@drawable/rounded_rectangle_edittext"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cooking"
                    android:padding="11dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:button="@null"
                    android:drawableStart="?android:attr/listChoiceIndicatorMultiple"
                    android:background="@drawable/rounded_rectangle_edittext"/>
            </LinearLayout>
            <Button
                android:id="@+id/savechanges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/rounded_rectangle"
                android:drawableStart="@drawable/ic_baseline_save_24"
                android:drawableTint="#f0f0f0"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:text="Save Changes"
                android:textAllCaps="false"
                android:textColor="#f0f0f0"
                android:textSize="17sp" />


        </LinearLayout>

    </ScrollView>






</LinearLayout>